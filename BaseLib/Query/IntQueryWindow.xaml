<Window x:Class="BaseLib.Query.IntQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:wpf="clr-namespace:BaseLib.Wpf"
        Title="" Height="85" Width="120" MinHeight="85" MaxHeight="85" MinWidth="120" ShowInTaskbar="False"  ResizeMode="NoResize" WindowStyle="ToolWindow" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <wpf:NumericUpDownControl x:Name="NumUpDown" KeyDown="OnKeyDownHandler"></wpf:NumericUpDownControl>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Click="CancelButtonClick">Cancel</Button>
            <Button Click="OkButtonClick" Grid.Column="2">OK</Button>
        </Grid>
    </Grid>
</Window>
