<Window x:Class="BaseLib.Query.DoubleQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="85" Width="120" MinHeight="85" MaxHeight="85" MinWidth="120" ShowInTaskbar="False"  ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBox"></TextBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Click="CancelButton_OnClick">Cancel</Button>
            <Button Click="OkButton_OnClick" Grid.Column="2">OK</Button>
        </Grid>
    </Grid>
</Window>
