<Window x:Class="BaseLib.Query.IntMinMaxQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:wpf="clr-namespace:BaseLib.Wpf"
        Title="" Height="90" Width="120" MinHeight="90" MaxHeight="90" MinWidth="120" ShowInTaskbar="False" Topmost="True" WindowStyle="None" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <wpf:NumericUpDownControl x:Name="NumUpDown1"></wpf:NumericUpDownControl>
        <wpf:NumericUpDownControl Grid.Row="1" x:Name="NumUpDown2"></wpf:NumericUpDownControl>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Click="CancelButtonClick">Cancel</Button>
            <Button Click="OkButtonClick" Grid.Column="2">OK</Button>
        </Grid>
    </Grid>
</Window>
